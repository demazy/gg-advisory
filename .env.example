env:
  OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
  MODE: backfill-months
  START_YM: "2025-01"
  END_YM:   "2025-09"

  # Content diversity & volume
  ITEMS_PER_SECTION: "6"         # up from 5
  PER_DOMAIN_CAP: "2"            # keep any one domain from dominating
  MIN_TOTAL_ITEMS: "1"           # allow digest with 1+ items if month is sparse

  # Text-length thresholds
  MIN_TEXT_CHARS: "350"
  PRIORITY_MIN_CHARS: "220"
  PRIORITY_DOMAINS: "aemo.com.au,arena.gov.au,cefc.com.au,ifrs.org,efrag.org,dcceew.gov.au,ec.europa.eu,commission.europa.eu"

  # Model & style
  MODEL: gpt-4o-mini
  TEMP: "0.2"

  # Hybrid PDF extraction
  MAX_PDF_BYTES: "5242880"
  PDF_TRUSTED: "aemo.com.au,ifrs.org,efrag.org,dcceew.gov.au,arena.gov.au,cefc.com.au,irena.org"

  # Debug on
  DEBUG: "1"
